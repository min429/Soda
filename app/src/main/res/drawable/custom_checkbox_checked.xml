<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 파란색 테두리 -->
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="oval">
            <stroke android:color="@color/theme_color" android:width="2dp"/>
            <solid android:color="@android:color/transparent"/> <!-- 내부 채우기 투명 -->
            <size android:width="24dp" android:height="24dp"/> <!-- 원하는 크기 -->
        </shape>
    </item>
    <!-- 내부 동그라미 (체크 마크) -->
    <item android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="@color/theme_color"/> <!-- 파란색으로 채우기 -->
            <size android:width="12dp" android:height="12dp"/>
        </shape>
    </item>
</layer-list>
