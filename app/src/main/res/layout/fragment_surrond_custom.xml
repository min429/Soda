<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/default_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/radio_button_daily"
            android:button="@null"
            android:checked="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="평상시"
            android:textAlignment="center"
            android:textColor="@drawable/radio_button_text"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/crowded_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/radio_button_crowded"
            android:button="@null"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="사람이 많은 곳\n(말소리 무시)"
            android:textAlignment="center"
            android:textColor="@drawable/radio_button_text"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/music_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/radio_button_music"
            android:button="@null"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="음악이 시끄러운 곳\n(음악소리 무시)"
            android:textAlignment="center"
            android:textColor="@drawable/radio_button_text"
            android:textSize="30sp" />

    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>